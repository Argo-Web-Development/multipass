#!/bin/sh
set -e

if [ ! -f  $SNAP_COMMON/libvirt/libvirtd.conf ]; then
    mkdir -p $SNAP_COMMON/libvirt
    cp $SNAP/var/snap/multipass/common/libvirt/libvirtd.conf $SNAP_COMMON/libvirt/libvirtd.conf
    sed -i 's/unix_sock_group = "libvirtd"/unix_sock_group = "sudo"/' $SNAP_COMMON/libvirt/libvirtd.conf
fi

if [ ! -d $SNAP_COMMON/run ]; then
    mkdir -p $SNAP_COMMON/run
fi
